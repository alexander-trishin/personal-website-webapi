{
    "arrowParens": "avoid",
    "endOfLine": "auto",
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": false,
    "overrides": [
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 1
            }
        },
        {
            "files": "*.html",
            "options": {
                "printWidth": 115
            }
        }
    ]
}
